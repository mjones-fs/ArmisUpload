  /public/v0/audit:
    get:
      description: |
        Get audit trail events as a list.

        Each event includes common fields such as `time`, `type`, and optionally `user` and `comment`.
        Some events will also include `application`, `appVersion`, `component`, `data`, or `components` depending on the event type.
        
        Notes on field shapes:
        - For compatibility, the `user`, `time`, and `type` fields may be returned either as plain strings
          or as objects with a single `value` property wrapping the string value.
      tags: [ audit ]
      operationId: getAuditTrailV0
      parameters:
        - name: filter
          description: |
            Filter applied to the audit events to be returned.
            Supported filters:
            - `type` - event type(s) to include (comma-separated via repeated key): e.g. `type=LoginEvent,type=NewCveEvent`
            - `user` - username filters:
              - exact match: `user=jdoe`
              - case-insensitive like: `user=ilike=*dem*`
              - case-insensitive not like: `user=nilike=*dem*`
            - `date` - date range with two ISO-8601 timestamps: e.g. `date=2025-01-01T00:00:00,date=2025-12-31T23:59:59`
            
            Compatibility forms accepted and translated automatically:
            - `time=ge=START;time=le=END` translates to the `date` range above
            - `type==TrackerConfigEvent` translates to `type=TrackerConfigEvent`
          in: query
          required: false
          schema:
            type: string
        - name: search
          description: Case-insensitive search on event type and username
          in: query
          required: false
          schema:
            type: string
        - name: offset
          description: The number of events to skip before returning results
          in: query
          required: false
          schema:
            type: integer
            default: 0
        - name: limit
          description: The maximum number of events to return
          in: query
          required: false
          schema:
            type: integer
            default: 20
      responses:
        "200":
          description: successful operation
          headers:
            X-Total-Count:
              description: The total number of events that match the filter criteria
              schema:
                type: integer
                format: int64
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: "#/components/schemas/AuditEventV0"
              examples:
                sample:
                  summary: Example audit events
                  value:
                    - user: { value: "demo@mergebase.com" }
                      time: { value: "2025-09-16T14:49:48Z" }
                      type: { value: "NewCveEvent" }
                    - user: "demo@mergebase.com"
                      time: "2025-09-16T14:49:48Z"
                      type: "NewCveEvent"
                    - user: "demo@mergebase.com"
                      time: "2025-09-16T14:49:48Z"
                      type: "CreateProjectEvent"
                      application:
                        id: -4671076484945569886
                        name: "test"
                        description: ""
                        type: "application"
                        createdBy: "demo@mergebase.com"
                        created: "2025-09-16T14:49:48Z"
                        version: 1
                      data:
                        project:
                          id: "-4671076484945569886"
                          name: "test"
                    - type: "AddComponentEvent"
                      time: "2025-02-25T14:25:10Z"
                      user: "bob"
                      application:
                        id: 2345678901234567890
                        name: "Payments Service"
                        description: ""
                        type: "application"
                        createdBy: "bob"
                        created: "2025-02-24T10:00:00Z"
                        version: 1
                      component:
                        arch: "maven"
                        group: "org.springframework"
                        artifact: "spring-core"
                        version: "5.3.20"
                        id: "5678901234567890123"
                      data:
                        project:
                          id: "123"
                          name: "Payments"
                          version: { id: "abc", name: "1.2.3" }
                    - type: "SuppressExpirationNotificationEvent"
