  /public/v0/scans/{scanId}/files:
    get:
      summary: Download a file from STP by SHA-256 hash
      description: |
        Downloads a file from Finite State's SCA (Software Composition Analysis) scan.
        The file is identified by its SHA-256 hash provided via the filter parameter.
        
        Note: This endpoint only works for SCA scan types. Other scan types (SAST, CONFIG, etc.) 
        do not have downloadable files available through this endpoint.
      tags: [ scans ]
      operationId: downloadScanFile
      parameters:
        - name: scanId
          description: |
            The unique ID of the scan. This is the `id` field returned by the `/public/v0/scans` endpoint.
          in: path
          required: true
          schema:
            type: string
        - name: filter
          description: |
            Filter to specify which file to download.
            The supported filter attribute is:
            - `hash` - the SHA-256 hash of the file, e.g. filter=hash=="a1b2c3d4e5f6..."
            - See the Filtering section in this specification's description for more information.
          in: query
          required: true
          schema:
            type: string
      responses:
        '200':
          description: File successfully retrieved
          content:
            application/octet-stream:
              schema:
                type: string
                format: binary
        '400':
          description: Invalid request parameters or filter format
          content:
            application/json:
              schema:
                $ref: "#/components/schemas/JsonErrorResponse"
        '401':
          description: Unauthorized access
          content:
            application/json:
              schema:
                $ref: "#/components/schemas/JsonErrorResponse"
        '403':
          description: User does not have permission to access this scan
          content:
            application/json:
              schema:
                $ref: "#/components/schemas/JsonErrorResponse"
        '404':
